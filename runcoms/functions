cd() {
    builtin cd "$@" && ls
}

aa_256 () {
    ( x=`tput op` y=`printf %$((${COLUMNS}-6))s`;
    for i in {0..256};
    do
    o=00$i;
    echo -e ${o:${#o}-3:3} `tput setaf $i;tput setab $i`${y// /=}$x;
    done )
}

growl() {
    if [ -n "$TMUX" ]; then
        echo -e "\ePtmux;\e\e]9;"${*}"\007\e\\"; return;
    else
        echo -e $'\e]9;'${*}'\007'; return;
    fi
}
